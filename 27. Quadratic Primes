import math

def is_prime(n):
    if n <= 1:
        return False
    if n <= 3:
        return True
    if n % 2 == 0 or n % 3 == 0:
        return False
    i = 5
    while i * i <= n:
        if n % i == 0 or n % (i + 2) == 0:
            return False
        i += 6
    return True

max_count = 0
best_a = 0
best_b = 0
best_c = 0

for a in range(-1, 2): 
    for b in range(-1000, 1001):
        for c in range(-1000, 1001):
            count = 0
            x = 0
            while True:
                f_x = a * x**2 + b * x + c
                if is_prime(abs(f_x)):
                    count += 1
                    x += 1
                else:
                    break
            if count > max_count:
                max_count = count
                best_a, best_b, best_c = a, b, c

print(max_count)
print(best_a, best_b, best_c)
